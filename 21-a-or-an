public String aOrAn(String word) {

    String firstChar = word.substring(0, 1).toLowerCase(); // Get the first letter

    List<String> vowels = new List<String>{'a', 'e', 'i', 'o', 'u'};

    if (vowels.contains(firstChar)) {
        return 'an ' + word;
    } else {
        return 'a ' + word;
    }
}